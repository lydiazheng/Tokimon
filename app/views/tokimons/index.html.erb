
<% provide(:title, "Index_tokimon") %>

<h1>The list of Tokimons</h1>

<table style="width:80%">
<thead>
	<tr>
		<th>Name</th>
		<th>Height</th>
		<th>Weight</th>
		<th>Fly</th>
		<th>Fight</th>
		<th>Fire</th>
		<th>Water</th>
		<th>Electric</th>
		<th>Frozon</th>
		<th>Total</th>
		<th></th>
		<th></th>

	</tr>
	</thead>

	<tbody>
	<% @tokimons.each do |tokimon| %>
	<tr>
		<td><%= tokimon.name %></td>
		<td><%= tokimon.height %></td>
		<td><%= tokimon.weight %></td>
		<td><%= tokimon.fly %></td>
		<td><%= tokimon.fight %></td>
		<td><%= tokimon.fire %></td>
		<td><%= tokimon.water %></td>
		<td><%= tokimon.electric %></td>
		<td><%= tokimon.frozon %></td>
		<td><%= tokimon.fire + tokimon.fight + tokimon.fly + tokimon.water + tokimon.electric + tokimon.frozon %></td>
		<td><%= link_to "Profile", tokimon %></td>
		<td><%= link_to "Delete", tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr> 
	<% end %>
	</tbody>
</table>

<br>

<%= link_to "create new tokimon!", new_tokimon_path, class: "btn btn-lg btn-primary" %>

<%= bar_chart Tokimon.group(:name).sum(:total) %>
