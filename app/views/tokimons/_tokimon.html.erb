



<table style="width:100%">
<thead>
	<tr>
		<th>Name</th>
		<th>Height</th>
		<th>Weight</th>
		<th>Fly</th>
		<th>Fight</th>
		<th>Fire</th>
		<th>Water</th>
		<th>Electric</th>
		<th>Frozon</th>
		<th>Total</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	<% @tokimons.each do |tokimon| %>
	<tr>
		<td><%= tokimon.name %></td>
		<td><%= tokimon.height %></td>
		<td><%= tokimon.weight %></td>
		<td><%= tokimon.fly %></td>
		<td><%= tokimon.fight %></td>
		<td><%= tokimon.fire %></td>
		<td><%= tokimon.water %></td>
		<td><%= tokimon.electric %></td>
		<td><%= tokimon.frozon %></td>
		<td><%= tokimon.fly + tokimon.fight + tokimon.fire + tokimon.water + tokimon.electric + tokimon.frozon %></td>
		<td><%= link_to 'Profile', tokimon %> </td>
		<td><%= link_to 'Edit', edit_tokimon_path(tokimon) %> </td>
		<td><%= link_to 'Delete',tokimon_path(tokimon) %> </td>
	</tr> 
	<% end %>
	</tbody>
</table>
<br>
<br>
<h3>Bar chart(in the order of names)</h3>
<%= bar_chart Tokimon.group(:name).sum(:total) %>